{
  "name": "{{ project_name }}",
  "version": "1.0.0",
  "description": "A Node.js application created with GitVan",
  "main": "{% if use_typescript %}dist/server.js{% else %}src/server.js{% endif %}",
  "scripts": {
    "dev": "{% if use_typescript %}tsx watch src/server.ts{% else %}nodemon src/server.js{% endif %}",
    "start": "{% if use_typescript %}node dist/server.js{% else %}node src/server.js{% endif %}",
    "build": "{% if use_typescript %}tsc{% else %}echo 'No build step needed for JavaScript'{% endif %}",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint {% if use_typescript %}src/**/*.ts{% else %}src/**/*.js{% endif %}",
    "lint:fix": "eslint {% if use_typescript %}src/**/*.ts{% else %}src/**/*.js{% endif %} --fix",
    "type-check": "{% if use_typescript %}tsc --noEmit{% else %}echo 'No TypeScript to check'{% endif %}"
  },
  "keywords": [
    "nodejs",
    "express",
    "api",
    "gitvan"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.0",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "dotenv": "^16.0.0"
  },
  "devDependencies": {{% if use_typescript %}
    "typescript": "^5.0.0",
    "@types/node": "^20.0.0",
    "@types/express": "^4.17.0",
    "@types/cors": "^2.8.0",
    "@types/morgan": "^1.9.0",
    "@types/jest": "^29.0.0",
    "@types/supertest": "^2.0.0",
    "tsx": "^4.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",{% endif %}
    "nodemon": "^3.0.0",
    "jest": "^29.0.0",
    "supertest": "^6.3.0",
    "eslint": "^8.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.{js,ts}",
      "!src/**/*.d.ts"
    ]
  }
}