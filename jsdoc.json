{
  "source": {
    "include": [
      "./src/",
      "./types/",
      "./README.md"
    ],
    "includePattern": "\\.(js|mjs|ts)$",
    "excludePattern": "(node_modules/|tests/|examples/)"
  },
  "opts": {
    "destination": "./docs/api/",
    "recurse": true,
    "template": "node_modules/docdash"
  },
  "plugins": [
    "plugins/markdown"
  ],
  "templates": {
    "cleverLinks": false,
    "monospaceLinks": false,
    "default": {
      "outputSourceFiles": true
    }
  },
  "tags": {
    "allowUnknownTags": true,
    "dictionaries": [
      "jsdoc",
      "closure"
    ]
  },
  "docdash": {
    "static": true,
    "sort": true,
    "search": true,
    "collapse": false,
    "wrap": true,
    "typedefs": true,
    "removeQuotes": "none",
    "menu": {
      "GitVan API": {
        "href": "https://gitvan.dev",
        "class": "menu-item",
        "id": "home_link"
      }
    }
  }
}
